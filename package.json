{
  "name": "name-tag-printer",
  "version": "1.0.0",
  "description": "A modern web application for printing name tags from TSV data with React and TypeScript",
  "type": "module",
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "name-tag",
    "printer",
    "tsv",
    "react",
    "typescript",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/name-tag-printer.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "validate": "npm run type-check && npm run lint"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.4.5",
    "vite": "^5.2.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}